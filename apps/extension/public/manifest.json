{
  "manifest_version": 3,
  "name": "Curio",
  "version": "1.0.0",
  "description": "Hello World Chrome Extension",
  "action": {
    "default_popup": "popup/index.html"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "permissions": ["tabs", "activeTab", "sidePanel", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
